<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="409dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/buyBananaDescriptionText"
                android:layout_width="180dp"
                android:layout_height="20dp"
                android:layout_marginEnd="32dp"
                android:gravity="bottom|start"
                android:text="Banana Description"
                android:textColor="#020202"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/userRemoveBananaButton"
                app:layout_constraintStart_toStartOf="@+id/buyBananaSubtotalCost"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.116" />

            <TextView
                android:id="@+id/buyBananaCost"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:gravity="bottom|end"
                android:text="Price"
                android:textColor="#020202"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/buyBananaDescriptionText"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.116" />

            <TextView
                android:id="@+id/buyBananaAmount"
                android:layout_width="180dp"
                android:layout_height="20dp"
                android:gravity="top|start"
                android:text="x amount"
                android:textColor="#020202"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/buyBananaSubtotalCost"
                app:layout_constraintEnd_toEndOf="@+id/buyBananaDescriptionText"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/buyBananaDescriptionText"
                app:layout_constraintTop_toBottomOf="@+id/buyBananaDescriptionText"
                app:layout_constraintVertical_bias="0.1" />

            <TextView
                android:id="@+id/buyBananaSubtotalText"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:gravity="center|end"
                android:text="Subtotal"
                android:textColor="#020202"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.022"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.816" />

            <TextView
                android:id="@+id/buyBananaSubtotalCost"
                android:layout_width="180dp"
                android:layout_height="20dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="20dp"
                android:gravity="center|start"
                android:text="Total amount"
                android:textColor="#020202"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/buyBananaSubtotalText"
                app:layout_constraintTop_toBottomOf="@+id/buyBananaDescriptionText"
                app:layout_constraintVertical_bias="0.111" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/userRemoveBananaButton"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/rounded_corners_main_screen"
                android:text="Remove"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>